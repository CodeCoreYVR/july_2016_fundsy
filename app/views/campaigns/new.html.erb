<h1>New Campaign</h1>
<%= simple_form_for @campaign do |f| %>
  <%= f.input :title %>
  <%= f.input :description %>
  <%= f.input :goal %>
  <%= f.input :end_date %>
  <h2>Rewards</h2>
  <%= f.simple_fields_for :rewards do |r| %>
    <%= r.input :title %>
    <%= r.input :body %>
    <%= r.input :amount %>
    <hr>
  <% end %>
  <%= f.submit class: "btn btn-primary" %>
<% end %>
